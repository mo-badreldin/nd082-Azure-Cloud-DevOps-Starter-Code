{
	"variables": {
		"subscription_id": "",
		"client_id": "",
		"client_secret": ""
	},
	"builders": [
		{
			"type": "azure-arm",
			"client_id": "{{user `client_id`}}",
			"client_secret": "{{user `client_secret`}}",
			"subscription_id": "{{user `subscription_id`}}",
			
			
			"managed_image_resource_group_name": "prj-img-rg",
			"managed_image_name": "nd-prj1-server-image",
			"os_type": "Linux",
			"image_publisher": "Canonical",
			"image_offer": "UbuntuServer",
			"image_sku": "18.04-LTS",
			"azure_tags": {
				"project": "nd-prj1"
			},
			"location": "East US",
			"vm_size": "Standard_B1s"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"apt-get update",
				"apt-get upgrade -y",
				"echo 'Hello, World!' > index.html",
				"nohup busybox httpd -f -p 80 &"
			],
			"inline_shebang": "sudo /bin/sh -x"
		}
	]
}